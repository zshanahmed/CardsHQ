<style>
  *{
      margin: 0;
      padding: 0;
      box-sizing: border-box;
  }

  body{
      background-color: #e5e4e4;
  }
  .row{
      background-color: white;
      border-radius: 20px;
      box-shadow: 12px 12px 22px gray;
  }
  img{
      border-top-left-radius: 20px;
      border-bottom-left-radius: 20px;
  }
  .btn1 {
      border:none;
      outline: none;
      height: 50px;
      width: 100%;
      border-radius: 4px;
      color: white;
      background-color: black;
      font-weight: bold;
      box-shadow: 2px 2px 10px gray;
  }

  .btn1:hover {
      border: 2px solid black;
      background-color: white;
      color: black;
  }

  #btn-login {
      width: 6em;
      padding: 0.5em;
      margin-left: 0.5em;
      box-shadow: 2px 2px 10px gray;
  }

  #btn-login:hover {
      background-color: white;
      color: #007bff;
  }
</style>

<section class="Form my-4 mx-5">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-lg-5">
        <%= image_tag("How-to-play-newmarket.jpg", class: "img-fluid", id: "login-img") %>
      </div>
      <div class="col-lg-7 px-5 pt-5">
        <h1 class="font-weight-bold py-3 ">CardsHQ</h1>
        <%= form_tag users_path do %>
          <div class="form-row">
            <div class="col-lg-7">
               <%= text_field :user, 'username', class: "form-control my-2 p-4", placeholder: "Username", :id => 'signupUser'%>
            </div>
          </div>
          <div class="form-row">
            <div class="col-lg-7">
              <%= password_field :user, 'password', :id =>'signupPassword', placeholder: "********", class:"form-control my-2 p-4" %>
            </div>
          </div>
          <div class="form-row">
            <div class="col-lg-7">
              <%=email_field :user, 'email', :class => 'form-control', :id =>"signupEmail", placeholder: 'Email-Address', class:"form-control my-2 p-4" %>
            </div>
          </div>
          <div class="form-row mt-3">
            <div class="col-lg-7">
              <%= submit_tag "Create my account", :id=>'UserCreate', class: "btn1" %>
        <% end %>
            </div>
              <%= link_to "Login", login_path, class: 'btn btn-primary', id:'btn-login' %>
          </div>
      </div>
      </div>
    </div>
</section>