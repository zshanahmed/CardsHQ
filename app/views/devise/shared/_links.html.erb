
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>

  .btn-primary:hover{
      background-color: white;
      color: #007bff;
  }

  .link {
      color: hsl(0 0% 0% / 0.6);
  }

  .link:hover {
      color: hsl(0 0% 0% / 0.8);
  }

  #btn-facebook{
      background-color: #4267B2;
  }

  #btn-facebook:hover{
      background-color: white;
      color: #4267B2;
  }

  #btn-twitter{
      background-color: #1da1f2;
  }
  #btn-twitter:hover{
      background-color: white;
      color: #1da1f2;
  }
</style>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'link' %>
<% end %>

<div class="form-row align-items-center">
<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class:'btn btn-primary mt-2' %>
<% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:'ml-1 link' %>
  <% end %>
</div>

<!--<div class="form-row">-->
<%#- if devise_mapping.omniauthable? %>
<!--  <div class="pb-1">-->
    <%#- resource_class.omniauth_providers.each do |provider| %>
      <%#= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:'btn btn-primary mt-2 mr-3', id:"btn-#{provider}"%>
    <%# end %>
  <%# end %>
<!--  </div>-->
<!--</div>-->
<div class="form-row align-items-center">
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class:'btn btn-primary mt-2' %>
<% end %>
  <div class="form-row">
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class:'p-2 m-1 link' %>
<% end %>
  </div>

</div>
</div>
