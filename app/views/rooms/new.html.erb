<style>
    .btn{
        box-shadow: 2px 2px 6px gray;
    }

    .btn-danger:hover{
        background-color: white;
        color: #dc3545;
    }

    .btn-success:hover{
        background-color: white;
        color: #28a745;
    }
</style>

<div class="container">
<h2 class="mb-2">
  Creating Room
</h2>

<%=form_tag rooms_path, :class => 'form' do%>
  <%=label :room, :name, 'Room Name', :class => 'col-form-label', :id =>"RoomName"%>
  <div class = 'form-inline'>
    <%=text_field :room, 'name', :class => 'form-control',:id => "RoomName" %>
  </div>
  <br>
  <%= submit_tag "Create My Room", class: 'btn btn-success' %>
<% end %>

</div>